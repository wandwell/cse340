<!-- content heading--> 
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    
    <!-- message--> 
    <%- messages() %>

    <!-- errors -->
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <!--Register form-->
    <form action="/account/register" method="post" id="registerForm">
        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" required>
        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" required>
        <label for="account_email">Email Address:</label>
        <input type="email" name="account_email" required>
        <label for="account_password">Password:</label>
        <p class="requirement">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <button type="submit" id="registerButton">Register</button>
        <p>Already Signed-Up? <a href="/login" class="loginLink">Login Here</a></p>
    </form>
    
    
    