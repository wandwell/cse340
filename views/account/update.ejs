<!-- content heading--> 
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    
    <!-- message--> 
    <%- messages() %>

    <!-- errors -->
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <!--Register form-->
    <form action="/account/update" method="post" id="updateAccountForm">
        <label for="account_firstname">First Name:</label>
        <input id="accountFirstname" type="text" name="account_firstname" value="<%= locals.accountData.account_firstname %>" required>
        <label for="account_lastname">Last Name:</label>
        <input id="accountLastname" type="text" name="account_lastname" value="<%= locals.accountData.account_lastname %>" required>
        <label for="account_email">Email Address:</label>
        <input id="accountEmail" type="email" name="account_email" value="<%= locals.accountData.account_email %>" required>
        <button type="submit" class="formButton" disabled>Update Account Information</button>
        <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    </form>

    <form action="/account/update/password" method="post" id="changePasswordForm">
        <label for="account_password">Password:</label>
        <p class="requirement">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="submit" class="formButton">Change Password</button>
        <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    </form>
    
    <script src="/js/account-update.js"></script>
    
    