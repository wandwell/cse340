<!-- content heading--> 
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    
    <!-- message--> 
    <%- messages() %>

    <!-- errors -->
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <!--login form-->
    <form action="/account/login" method="post" id="loginForm" >
        <label for="account_email">Email:</label>
        <input type="email" name="account_email" value="<%= locals.account_email %>"required>
        <label for="account_password">Password:</label>
        <p class="requirement">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <button type="submit" class="formButton">Login</button>
        <p>No Account? <a href="/account/register" class="registrationLink">Sign-Up</a></p>
    </form>
    
    
    
    