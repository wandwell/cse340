<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <!-- This link is only visible when the client is logged in -->
        <% if (locals.loggedin) { %>
            <a title="Welcome User" href="/account/">Welcome <%- locals.accountData.account_firstname %></a> |
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>
